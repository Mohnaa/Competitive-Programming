#define MOD1 1000000007
#define MOD2 1000000009
using namespace std;
signed main(){
     //if the no is positive no then no need to delete 
 
   lli n;cin>>n;
   if (n>=0) cout<<n;
   else{
      int num = (n/10);
      int num2 = (n/100)*10 + n%10 ;
      cout<<max(num,num2);
   }
 
